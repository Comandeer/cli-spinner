{
  "name": "@comandeer/cli-spinner",
  "version": "0.3.2",
  "description": "Simple CLI spinner",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/cli-spinner.mjs"
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "build": "rlb",
    "lint": "eslint \"./src\" \"./tests\"",
    "test": "c8 ava",
    "version": "npm test && npm run build && git add -f dist/",
    "postversion": "git rm -r --cached dist/ && git commit -m \"chore(dist): clean after release [ci skip]\" && git push origin && git push origin --tags",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Comandeer/cli-spinner.git"
  },
  "keywords": [
    "cli spinner"
  ],
  "author": "Comandeer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Comandeer/cli-spinner/issues"
  },
  "homepage": "https://github.com/Comandeer/cli-spinner#readme",
  "commitplease": {
    "nohook": true,
    "style": "angular",
    "types": [
      "feat",
      "fix",
      "docs",
      "style",
      "refactor",
      "perf",
      "test",
      "build",
      "ci",
      "chore",
      "revert"
    ],
    "scope": "\\S+.*"
  },
  "devDependencies": {
    "@comandeer/eslint-config": "^0.11.1",
    "@comandeer/rollup-lib-bundler": "^0.22.0",
    "@types/node": "^20.4.5",
    "@types/sinon": "^10.0.15",
    "ava": "^5.3.1",
    "c8": "^8.0.1",
    "commitplease": "^3.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.45.0",
    "husky": "^8.0.3",
    "sinon": "^15.2.0",
    "tslib": "^2.6.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "ansi-escapes": "^6.2.0",
    "is-interactive": "^2.0.0"
  }
}
